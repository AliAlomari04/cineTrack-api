generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model user{
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean @default(false)

  @@index([email])

  watchlist watchlistItem[]
}

enum watchlistStatus{
  PLANNED
  WATCHING
  COMPLETED
  DROPPED
}
model movie{
  id String @id @default(uuid())
  tmdbId String
  title String
  overview String? @db.Text //عشان النص الطويل
  releaseYear Int
  posterUrl String?
  runtime Int? //حتكون بالدفائق

  //POSTGRES SPECIFIC: ARRAY OF THINGS
  genres String[]

  // Twists
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean @default(false)

  watchlistItems watchlistItem[]

  // فهرس للسنة والعنوان عشان الفلترة
  @@index([releaseYear])
  @@index([title])
  @@unique([tmdbId])
  
}

model watchlistItem{
  id String @id @default(uuid())
  status watchlistStatus @default(PLANNED)
  rating Int?
  notes String?

  // Relations
  userId String
  users user @relation(fields: [userId], references: [id])

  movieId String
  movies movie @relation(fields: [movieId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Preventing the user from adding the same movie twice
  @@unique([userId, movieId])

  // Filtering the use's watchlist
  @@index([userId])
}
